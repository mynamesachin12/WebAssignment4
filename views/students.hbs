<div class="row">
  <div class="col-md-12">
    <br />
    <h2>Students</h2>
    <hr />
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <td>Student Num</td>
            <td>Full Name</td>
            <td>Email</td>
            <td>Address</td>
            <td>Status</td>
            <td>Course ID</td>
          </tr>
        </thead>
        <tbody>
          {{#each students}}
            <tr>
              <td>{{this.studentNum}}</td>
              <td><a href="/student/{{this.studentNum}}" />
                {{this.firstName}}
                {{this.lastName}}</td>
              <td><a href="mailto:{{this.email}}" />{{this.email}}</td>
              <td>{{this.addressStreet}},
                {{this.addressCity}},
                {{this.addressProvince}}</td>
              <td>{{this.status}}</td>
              <td><a
                  href="/students?course={{this.course}}"
                />{{this.course}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  <div class="col-md-12 text-center">
    {{#unless students}}
      <strong>{{message}}</strong>
    {{/unless}}
  </div>
</div>